{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "nuxt prepare",
    "prepare": "husky install",
    "build:pre": "rimraf .output",
    "build:app": "nuxt build",
    "dev:pre": "kill-port 3000",
    "dev:app": "nuxt dev",
    "lint:js": "eslint --ext \".cjs,.mjs,.ts,.js,.vue\" --ignore-path .gitignore .",
    "format:js": "prettier --write \"**/*.{cjs,mjs,ts,vue,json}\"",
    "test:ts": "nuxt typecheck",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "lint": "run-s format:js lint:js",
    "test": "run-s test:ts",
    "dev": "run-s dev:pre dev:app",
    "build": "run-s build:pre build:app",
    "preview": "run-s build dev:pre && nuxt preview"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@iconify-json/mdi": "^1.1.64",
    "@nuxt/test-utils": "^3.9.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/parser": "^6.18.0",
    "@unocss/nuxt": "^0.58.3",
    "@unocss/preset-icons": "^0.58.3",
    "@vue/test-utils": "^2.4.3",
    "@vueuse/core": "^10.7.1",
    "@vueuse/nuxt": "^10.7.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "happy-dom": "^13.1.4",
    "husky": "^8.0.0",
    "kill-port-process": "^3.2.1",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "nuxt": "^3.9.0",
    "playwright-core": "^1.40.1",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "unocss": "^0.58.3",
    "vitest": "^1.2.0",
    "vue": "^3.4.5",
    "vue-router": "^4.2.5"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "@unocss/reset": "^0.58.3",
    "pinia": "^2.1.7"
  }
}
